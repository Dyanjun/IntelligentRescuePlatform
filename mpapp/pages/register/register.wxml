<!--index.wxml-->
<view class="container">
  <view class="title">
    <image class="logo" src="https://vi.sjtu.edu.cn/uploads/files/caf2f5045c47308250fab3812dfe2003-6896b91594f238b24e67696224948251.png"></image>
    <text>  IST智能救援平台客户端</text>
  </view>

  <view class="subtitle"> 
    <text>用户注册</text>  
  </view>
  
  <form bindsubmit="submitRegister" class="form">
    <view class="line"> 
      <label>用户名:</label>
      <input
        class="input"
        name="username"
        placeholder="不少于6个字符的数字和字母组合"
      />
    </view>

    <view class="line"> 
      <label>密码 ：</label>
      <input
        class="input"
        name="password"
        placeholder="不少于6个字符"
      />
    </view>

    <view class="line"> 
      <label>姓名 ：</label>
      <input
        class="input"
        name="personName"
      />
    </view>

    <view class="line"> 
      <label>手机号:</label>
      <input
        class="input"
        name="telephone"
      />
    </view>
    
    <view class="line">
      <radio-group name="radio">
        <label><radio checked value="family"/>家属</label>   
        <label><radio value="rescue"/>救援人员</label>
      </radio-group>
    </view>
    
    <view class="button">
      <button type="default" form-type="submit">
        注册
      </button>
    </view>
  </form>

</view>
