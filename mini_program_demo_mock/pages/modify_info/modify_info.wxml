<!--index.wxml-->
<view class="container">
  <view class="title">
    <image class="logo" src="https://vi.sjtu.edu.cn/uploads/files/caf2f5045c47308250fab3812dfe2003-6896b91594f238b24e67696224948251.png"></image>
    <text>  IST智能救援平台客户端</text>
  </view>

  <view class="subtitle"> 
    <text>修改用户信息</text>  
  </view>
  
  <form bindsubmit="submitSave" class="form">
    <view class="line"> 
      <label>用户名:</label>
      <text class="username">{{username}}</text>
    </view>

    <view class="line"> 
      <label>密码 ：</label>
      <input
        class="input"
        name="password"
        placeholder="不少于6个字符"
      />
    </view>

    <view class="line"> 
      <label>姓名 ：</label>
      <input
        class="input"
        name="personName"
      />
    </view>

    <view class="line"> 
      <label>手机号:</label>
      <input
        class="input"
        name="telephone"
      />
    </view>
    
    <view class="button">
      <button type="default" form-type="submit">
        保存
      </button>
    </view>
  </form>

</view>
